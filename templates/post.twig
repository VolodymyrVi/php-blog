{% extends "base.twig" %}
{% block body %}

	<div class="container">
    {% if post.image_path is not null %}
        <img src="/{{ post.image_path }}" class="img-fluid" alt="{{ post.title|escape }} ">
    {% else %}
        <img src="https://dummyimage.com/1200x400/5b76ba/ffffff" class="img-fluid" alt="...">
	{% endif %}	
        <h1 class="mt-3 mb-3">
			{{ post.title|escape }}  
		</h1>
        <div class="continer mb-3">
            <div class="row">
            <span class="text-muted">VolodumyrVi | {{ post.published_date|date("F d, Y") }}</span>
            </div>
        </div>
        <div class="">
        {{post.content|raw}}
        </div>
	</div>
{% endblock %}
